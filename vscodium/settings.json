{
    "[latex]": {
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.nonBasicASCII": false,
        "editor.wordWrap": "on",
        "editor.wrappingIndent": "same"
    },
    "[markdown]": {
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.nonBasicASCII": false,
        "editor.wordWrap": "on",
        "editor.wrappingIndent": "same"
    },
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.semanticHighlighting.enabled": false
    },
    "chat.disableAIFeatures": true,
    "chatgpt.localeOverride": "ja-JP",
    "chatgpt.openOnStartup": true,
    "cSpell.showAutocompleteDirectiveSuggestions": false,
    "csv-edit.readOption_hasHeader": "true",
    "diffEditor.experimental.useTrueInlineView": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.accessibilitySupport": "off",
    "editor.codeActionsOnSave": {
        "source.organizeImports.ruff": "always",
        "source.sort.json": "always"
    },
    "editor.detectIndentation": true,
    "editor.dragAndDrop": false,
    "editor.fontFamily": "'JetBrains Mono', 'TakaoExGothic', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "editor.fontWeight": "bold",
    "editor.formatOnSave": true,
    "editor.guides.bracketPairs": true,
    "editor.inlayHints.enabled": "off",
    "editor.minimap.enabled": false,
    "editor.mouseWheelScrollSensitivity": 1.6,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.showFoldingControls": "always",
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": true,
    "editor.unicodeHighlight.nonBasicASCII": true,
    "editor.wordSegmenterLocales": [
        "ja"
    ],
    "editor.wrappingIndent": "indent",
    "files.associations": {
        ".gitconfig_local": "properties",
        "*.bash": "shellscript",
        "CHANGELOG": "plaintext"
    },
    "files.exclude": {
        "**/__pycache__": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": "all",
    "git.confirmSync": false,
    "git.enableCommitSigning": true,
    "git.enableStatusBarSync": false,
    "git.openRepositoryInParentFolders": "always",
    "git.pruneOnFetch": true,
    "git.replaceTagsWhenPull": true,
    "git.suggestSmartCommit": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.graph.statusBar.enabled": false,
    "gitlens.statusBar.enabled": false,
    "java.checkstyle.configuration": "google_checks.xml",
    "latex-workshop.docker.enabled": true,
    "latex-workshop.docker.image.latex": "docker.io/texlive/texlive:TL2024-historic",
    "latex-workshop.docker.path": "podman",
    "latex-workshop.formatting.latex": "latexindent",
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.outDir": "build",
    "latex-workshop.latex.recipe.default": "latexmk (latexmkrc)",
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.donotVerifyTags": true,
    "mypy-type-checker.args": [
        "--cache-dir=${userHome}/.cache/mypy/${workspaceFolder}"
    ],
    "mypy-type-checker.showNotifications": "always",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv",
    "python.languageServer": "Jedi",
    "python.terminal.activateEnvironment": false,
    "python.terminal.shellIntegration.enabled": false,
    "redhat.telemetry.enabled": true,
    "scm.alwaysShowRepositories": true,
    "scm.defaultViewMode": "tree",
    "svg.preview.mode": "img",
    "telemetry.telemetryLevel": "all",
    "terminal.integrated.confirmOnExit": "hasChildProcesses",
    "terminal.integrated.defaultProfile.linux": "fish",
    "terminal.integrated.defaultProfile.osx": "fish",
    "terminal.integrated.enableVisualBell": true,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontWeight": "bold",
    "terminal.integrated.initialHint": false,
    "terminal.integrated.profiles.linux": {
        "sh": {
            "path": "sh"
        }
    },
    "update.showReleaseNotes": false,
    "vsicons.dontShowNewVersionMessage": true,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.empty.hint": "hidden",
    "workbench.iconTheme": "vscode-icons",
    "workbench.layoutControl.enabled": false,
    "workbench.navigationControl.enabled": false,
    "workbench.productIconTheme": "bongocat",
    "workbench.startupEditor": "none",
    "workbench.view.alwaysShowHeaderActions": true
}
